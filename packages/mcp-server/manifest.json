{
  "dxt_version": "0.2",
  "name": "@moderation-api/sdk-mcp",
  "version": "0.0.1",
  "description": "The official MCP Server for the Moderation API API",
  "author": {
    "name": "Moderation API",
    "email": "support@moderationapi.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moderation-api/sdk-typescript.git"
  },
  "homepage": "https://github.com/moderation-api/sdk-typescript/tree/main/packages/mcp-server#readme",
  "documentation": "https://docs.moderationapi.com",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "MODAPI_SECRET_KEY": "${user_config.MODAPI_SECRET_KEY}"
      }
    }
  },
  "user_config": {
    "MODAPI_SECRET_KEY": {
      "title": "secret_key",
      "description": "",
      "required": true,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
